<div id="content" class="span-17 colborder">	
	
	<h4>Toutes les offres classées par prix croissant</h4>
	
	<div class="vehicles_list">
		<% if !@vehicles.blank? %>
		  <% for v in @vehicles %>
		    <p class="listitem">
				<%= image_tag(v.overviewpic.url(:thumb)) %>  <%= vehicle_info(v) %> <%= link_to "Voir fiche", vehicle_path(v), :class => "showlink"%>
			</p>
		  <% end %>
		<% else %>
		  Pas d'offres pour le moment.
		<% end %>

		<p class="navlinks">
			<%= will_paginate @vehicles, :previous_label => "Précédent", :next_label => "Suivant" %>
		</p>
	</div>
</div>

<div id="sidebar" class="span-6 last">
	<div class="database_state">
		<p>Statut</p>
		<p><%=h @vehicle_number %> offre(s)</p>
		<p><%=h @user_number %> utilisateur(s) enregistré(s)</p>
	</div>
	
	<div class="registration_block">
		<p>Vous êtes un professionnel ?</p>
		<p><%= link_to "Découvrez nos services", "/services.html" %></p>
		<p>Vous êtes un particulier ?</p>
		<p>
			<%= link_to "Publiez gratuitement vos annonces", new_user_registration_path %>
		</p>
	</div>
</div>